<h1>書本列表</h1>
<br/>
<%= flash[:notice]%>

<%= link_to '新增書本', new_book_path %>
</br>
<table>
  <tr>
    <td>得票數</td>
    <td>書名</td>
    <td>作者</td>
    <td>類別</td>
    <td>簡介</td>
    <td>動作</td>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.votes %></td>
    <td><%= link_to book.name, book_path(book.id) %></td>
    <td><%= book.author %></td>
    <td><%= book.category %></td>
    <td><%= book.brief %></td>
    <td><%= link_to "編輯", edit_book_path(book) %>
        <%= link_to "刪除", book_path(book), method: "delete", data: { confirm: "確認刪除" } %>
    </td>
  </tr>
  <% end %>
</table>


    